<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMesaj"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/mesaj_alan_text_bg"
        android:padding="8dp"
        android:text="TextView"
        android:textColor="@color/siyah"
        android:textSize="14sp"
        app:layout_constraintWidth_max="300dp"
        app:layout_constraintBottom_toBottomOf="@+id/mesajGonderenProfilePic"
        app:layout_constraintStart_toEndOf="@+id/mesajGonderenProfilePic"
        app:layout_constraintTop_toTopOf="@+id/mesajGonderenProfilePic" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mesajGonderenProfilePic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>